---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import Icon from "@components/Icon.astro";
import { getAllTags, getContentByTag } from "@lib/utils";

const blogPosts = await getCollection("blog", ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});
const projects = await getCollection("projects", ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});
const allWork = await getCollection("work");

const allTags = getAllTags(blogPosts, projects, allWork);

// Convert to array with counts and sort by popularity
const tagsWithCounts = Array.from(allTags.entries())
  .map(([slug, displayName]) => {
    const count = getContentByTag(displayName, blogPosts, projects, allWork).length;
    return { slug, displayName, count };
  })
  .sort((a, b) => b.count - a.count);
---

<PageLayout title="Tags" description="Browse all content organized by tags.">
  <Container>
    <div class="space-y-10">
      <!-- Header -->
      <div class="animate space-y-4">
        <div class="flex items-center gap-2">
          <Icon name="tag" size={24} />
          <h1 class="font-semibold text-slate-dark dark:text-ivory-light">All Tags</h1>
        </div>
        <p class="text-sm text-cloud-dark dark:text-cloud-light">
          {tagsWithCounts.length} tag{tagsWithCounts.length !== 1 ? "s" : ""} across
          blog posts, projects, and work experience
        </p>
      </div>

      <!-- Tags Grid -->
      {
        tagsWithCounts.length > 0 ? (
          <div class="animate grid grid-cols-1 gap-4 sm:grid-cols-2">
            {tagsWithCounts.map(({ slug, displayName, count }) => (
              <a
                href={`/tags/${slug}`}
                class="group flex items-center justify-between rounded-lg border border-cloud-medium/30 px-4 py-3 transition-colors duration-300 ease-in-out hover:bg-cloud-dark/5 hover:text-slate-dark dark:border-cloud-medium/40 dark:hover:bg-ivory-dark/5 dark:hover:text-ivory-light"
              >
                <div class="flex items-center gap-2">
                  <Icon name="tag" size={18} />
                  <span class="font-medium">{displayName}</span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="text-sm text-cloud-dark dark:text-cloud-light">
                    {count} item{count !== 1 ? "s" : ""}
                  </span>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    class="size-4 stroke-2 fill-none stroke-current opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300 ease-in-out"
                  >
                    <line x1="5" y1="12" x2="19" y2="12" />
                    <polyline points="12 5 19 12 12 19" />
                  </svg>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <div class="animate text-center text-cloud-medium dark:text-cloud-medium">
            <p>No tags found.</p>
          </div>
        )
      }
    </div>
  </Container>
</PageLayout>
