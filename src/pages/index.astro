---
import { getCollection } from "astro:content";
import ArrowCard from "@components/ArrowCard.astro";
import Container from "@components/Container.astro";
import GitHubCard from "@components/GitHubCard.astro";
import LinkedInCard from "@components/LinkedInCard.astro";
import Link from "@components/Link.astro";
import { HOME, SITE, SOCIALS } from "@consts";
import PageLayout from "@layouts/PageLayout.astro";
import { dateRange, getShowcasedContent, getShowcasedWork } from "@lib/utils";
import { HOMEPAGE } from "@showcases";

const allBlog = (await getCollection("blog")).filter((p) => !p.data.draft);
const allProjects = (await getCollection("projects")).filter(
  (p) => !p.data.draft,
);
const allWork = await getCollection("work");

const blog = getShowcasedContent(allBlog, HOMEPAGE.blog);
const projects = getShowcasedContent(allProjects, HOMEPAGE.projects);
const work = getShowcasedWork(allWork, HOMEPAGE.work);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <h4 class="animate font-semibold text-slate-dark dark:text-ivory-light">
      Hi, I'm Pau <span class="text-xl">üëãüèª</span>
    </h4>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
            <p class="animate">
              I am a software engineer and network engineer graduate based in Barcelona
              with over a year of professional experience. I'm passionate about building full-stack
              applications and IoT projects using microcontrollers like Arduino and ESP32.
            </p>
            <p class="animate">
              When I'm not coding, I'm probably tinkering with new tech or working on side projects.
              I feel comfortable working across the entire stack, from frontend to backend, and I
              especially enjoy the challenge of making hardware and software work together seamlessly.
            </p>
            <p class="animate">
              You can check out my projects on the
              <Link href="/projects" class="text-accent hover:text-primary hover:underline">
                projects page
              </Link>
              or visit my
              <GitHubCard username="paugarcia32">
                <Link
                  href="https://github.com/paugarcia32"
                  aria-label="Pau Garcia on Github"
                  external
                >
                  GitHub
                </Link>
              </GitHubCard>
              to see what I'm currently building.
            </p>
        </article>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-slate-dark dark:text-ivory-light">
            Featured posts
          </h5>
          <Link href="/blog">
            See all posts
          </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {blog.map(post => (
            <li>
              <ArrowCard entry={post} />
            </li>
          ))}
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-slate-dark dark:text-ivory-light">
            Work Experience
          </h5>
          <Link href="/work">
            See all work
          </Link>
        </div>
        <ul class="flex flex-col space-y-8">
          {work.map((entry) => (
            <li>
              <div class="text-sm opacity-75">
                {entry.totalDuration}
              </div>
              {entry.url ? (
                <Link
                  href={entry.url}
                  external
                  class="font-semibold text-slate-dark dark:text-ivory-light hover:underline"
                >
                  {entry.company}
                </Link>
              ) : (
                <div class="font-semibold text-slate-dark dark:text-ivory-light">
                  {entry.company}
                </div>
              )}
              <div class="mt-4 space-y-6">
                {entry.sortedPositions.map((position) => (
                  <div>
                    <div class="text-sm opacity-75">
                      {dateRange(position.data.dateStart, position.data.dateEnd)}
                    </div>
                    <div class="font-medium text-slate-dark dark:text-ivory-light">
                      {position.data.role}
                    </div>
                    <article class="prose prose-sm dark:prose-invert mt-2">
                      <p>{position.data.description}</p>
                    </article>
                  </div>
                ))}
              </div>
            </li>
          ))}
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-slate-dark dark:text-ivory-light">
            Featured projects
          </h5>
          <Link href="/projects">
            See all projects
          </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {projects.map(project => (
            <li>
              <ArrowCard entry={project} />
            </li>
          ))}
        </ul>
      </section>

      <section class="animate space-y-4">
        <h5 class="font-semibold text-slate-dark dark:text-ivory-light">
          Let's Connect
        </h5>
        <article>
          <p>
            If you want to get in touch with me about something or just to say hi,
            reach out on social media or send me an email.
          </p>
        </article>
        <ul class="flex flex-wrap gap-2">
          {SOCIALS.map(SOCIAL => (
            <li class="flex gap-x-2 text-nowrap">
              {SOCIAL.NAME === "github" ? (
                <GitHubCard username="paugarcia32">
                  <Link href={SOCIAL.HREF} external aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}>
                    {SOCIAL.NAME}
                  </Link>
                </GitHubCard>
              ) : SOCIAL.NAME === "linkedin" ? (
                <LinkedInCard>
                  <Link href={SOCIAL.HREF} external aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}>
                    {SOCIAL.NAME}
                  </Link>
                </LinkedInCard>
              ) : (
                <Link href={SOCIAL.HREF} external aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}>
                  {SOCIAL.NAME}
                </Link>
              )}
              {"/"}
            </li>
          ))}
          <li class="line-clamp-1">
            <button
              id="copy-email-btn"
              data-email={SITE.EMAIL}
              aria-label={`Copy ${SITE.NAME}'s email`}
              class="decoration-primary/30 dark:decoration-accent/40 hover:decoration-primary/50 hover:dark:decoration-accent/60 text-current hover:text-primary hover:dark:text-accent transition-colors duration-300 ease-in-out underline underline-offset-2 cursor-pointer"
            >
              {SITE.EMAIL}
            </button>
          </li>
        </ul>
      </section>
    </div>
  </Container>
</PageLayout>

<script>
  function initCopyEmail() {
    const btn = document.getElementById("copy-email-btn");
    if (!btn) return;

    const email = (btn as HTMLButtonElement).dataset.email ?? "";

    // Create tooltip and append to body
    const existing = document.getElementById("copy-email-tooltip");
    if (existing) existing.remove();

    const tooltip = document.createElement("div");
    tooltip.id = "copy-email-tooltip";
    tooltip.textContent = "click to copy";
    tooltip.className = "pointer-events-none fixed z-50 rounded-md px-2.5 py-1 text-xs font-medium bg-slate-dark dark:bg-ivory-light text-ivory-light dark:text-slate-dark opacity-0 translate-y-1";
    tooltip.style.cssText += "top: -9999px; left: -9999px; transition: opacity 200ms ease-out, transform 200ms ease-out;";
    document.body.appendChild(tooltip);

    let hideTimeout: ReturnType<typeof setTimeout>;
    let copied = false;

    function positionTooltip() {
      const rect = btn.getBoundingClientRect();
      const tooltipWidth = tooltip.offsetWidth || 90;
      const spaceBelow = window.innerHeight - rect.bottom;
      if (spaceBelow < 40) {
        tooltip.style.top = `${rect.top - tooltip.offsetHeight - 6}px`;
      } else {
        tooltip.style.top = `${rect.bottom + 6}px`;
      }
      tooltip.style.left = `${rect.left + rect.width / 2 - tooltipWidth / 2}px`;
    }

    function show() {
      clearTimeout(hideTimeout);
      if (!copied) tooltip.textContent = "click to copy";
      positionTooltip();
      tooltip.getBoundingClientRect();
      tooltip.classList.remove("opacity-0", "translate-y-1");
      tooltip.classList.add("opacity-100", "translate-y-0");
    }

    function hide() {
      hideTimeout = setTimeout(() => {
        tooltip.classList.remove("opacity-100", "translate-y-0");
        tooltip.classList.add("opacity-0", "translate-y-1");
      }, 100);
    }

    btn.addEventListener("mouseenter", show);
    btn.addEventListener("mouseleave", hide);

    btn.addEventListener("click", async () => {
      try {
        await navigator.clipboard.writeText(email);
      } catch {
        const ta = document.createElement("textarea");
        ta.value = email;
        ta.style.cssText = "position:fixed;opacity:0;";
        document.body.appendChild(ta);
        ta.select();
        document.execCommand("copy");
        document.body.removeChild(ta);
      }

      copied = true;
      tooltip.textContent = "copied!";
      positionTooltip();

      setTimeout(() => {
        copied = false;
        tooltip.textContent = "click to copy";
      }, 2000);
    });
  }

  document.addEventListener("DOMContentLoaded", initCopyEmail);
  document.addEventListener("astro:after-swap", initCopyEmail);
</script>
