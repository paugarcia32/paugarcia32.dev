---
import { getCollection, render } from "astro:content";
import CompanyCard from "@components/CompanyCard.astro";
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { WORK } from "@consts";
import PageLayout from "@layouts/PageLayout.astro";
import { dateRange, groupPositionsByCompany, normalizeEntryId } from "@lib/utils";

// Get all work entries (positions and company metadata)
const allWork = await getCollection("work");

// Get all non-draft projects (drafts should never appear in work page)
const allProjects = await getCollection("projects", ({ data }) => {
  return data.draft !== true;
});

// Group and sort
const work = groupPositionsByCompany(allWork);
---

<PageLayout title={WORK.TITLE} description={WORK.DESCRIPTION}>
  <Container>
    <div class="space-y-10">
      <div class="animate font-semibold text-slate-dark dark:text-ivory-light">
        Work
      </div>
      <ul class="flex flex-col space-y-8">
        {
          work.map((entry) => (
            <li class="animate">
              <div class="text-sm opacity-75">{entry.totalDuration}</div>
              <CompanyCard
                company={entry.company}
                url={entry.url}
                description={entry.description}
                logo={entry.logo}
              >
                {entry.url ? (
                  <Link
                    href={entry.url}
                    external
                    class="font-semibold text-slate-dark dark:text-ivory-light hover:underline"
                  >
                    {entry.company}
                  </Link>
                ) : (
                  <div class="font-semibold text-slate-dark dark:text-ivory-light">
                    {entry.company}
                  </div>
                )}
              </CompanyCard>
              <div class="mt-4 space-y-6">
                {entry.sortedPositions.map(async (position) => {
                  const { Content } = await render(position);
                  return (
                    <div>
                      <div class="text-sm opacity-75">
                        {dateRange(position.data.dateStart, position.data.dateEnd)}
                      </div>
                      <div class="font-medium text-slate-dark dark:text-ivory-light">
                        {position.data.role}
                      </div>
                      <article class="prose prose-sm dark:prose-invert mt-2">
                        <Content />
                      </article>
                      {(() => {
                        const related = allProjects.filter(
                          (p) => p.data.workPosition === position.id,
                        );
                        return related.length > 0 ? (
                          <div class="mt-3 space-y-1.5">
                            <div class="text-xs font-medium text-cloud-dark dark:text-cloud-light uppercase tracking-wide">
                              Projects
                            </div>
                            <ul class="flex flex-col gap-1">
                              {related.map((p) => (
                                <li>
                                  <a
                                    href={`/projects/${normalizeEntryId(p)}`}
                                    class="group flex items-center gap-1 text-sm text-cloud-dark dark:text-cloud-light hover:text-slate-dark dark:hover:text-ivory-light transition-colors"
                                  >
                                    <span class="opacity-50 group-hover:opacity-100 transition-opacity">â†’</span>
                                    {p.data.title}
                                  </a>
                                </li>
                              ))}
                            </ul>
                          </div>
                        ) : null;
                      })()}
                    </div>
                  );
                })}
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </Container>
</PageLayout>
