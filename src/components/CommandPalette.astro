---
import { iconPaths } from "@lib/icons";

const serializedIconPaths = JSON.stringify(iconPaths);
---

<dialog
  id="command-palette"
  class="fixed inset-0 z-[60] m-0 h-full w-full max-w-none bg-transparent p-0 backdrop:bg-black/50 backdrop:backdrop-blur-sm"
>
  <div
    class="flex h-full items-start justify-center px-3 pt-[10vh] sm:px-4 sm:pt-[15vh]"
    id="palette-container"
  >
    <div
      class="w-full max-w-2xl overflow-hidden rounded-lg border border-cloud-medium/30 bg-ivory-light shadow-2xl dark:border-cloud-medium/40 dark:bg-slate-medium"
    >
      <!-- Search Input -->
      <div class="border-b border-cloud-medium/30 p-4 dark:border-cloud-medium/40">
        <input
          type="text"
          id="search-input"
          placeholder="Search blog posts, projects, and work..."
          autocomplete="off"
          class="w-full bg-transparent text-base outline-none placeholder:text-cloud-medium dark:placeholder:text-cloud-medium"
        />
      </div>

      <!-- Results Container -->
      <div
        id="search-results"
        class="max-h-[60vh] overflow-y-auto overscroll-contain"
      >
        <!-- Results will be rendered here -->
      </div>

      <!-- Footer -->
      <div
        class="flex items-center justify-between border-t border-cloud-medium/30 px-4 py-3 text-xs text-black/60 dark:border-cloud-medium/40 dark:text-white/60"
      >
        <!-- Mobile: just esc hint -->
        <div class="flex gap-4 sm:hidden">
          <span class="flex items-center gap-1">
            <kbd
              class="rounded border border-cloud-medium/30 px-1.5 py-0.5 dark:border-cloud-medium/40"
              >esc</kbd
            > close
          </span>
        </div>
        <!-- Desktop: full shortcuts -->
        <div class="hidden sm:flex gap-4">
          <span class="flex items-center gap-1">
            <kbd
              class="rounded border border-cloud-medium/30 px-1.5 py-0.5 dark:border-cloud-medium/40"
              >1-9</kbd
            > quick select
          </span>
          <span class="flex items-center gap-1">
            <kbd
              class="rounded border border-cloud-medium/30 px-1.5 py-0.5 dark:border-cloud-medium/40"
              >↑↓</kbd
            > navigate
          </span>
          <span class="flex items-center gap-1">
            <kbd
              class="rounded border border-cloud-medium/30 px-1.5 py-0.5 dark:border-cloud-medium/40"
              >↵</kbd
            > select
          </span>
          <span class="flex items-center gap-1">
            <kbd
              class="rounded border border-cloud-medium/30 px-1.5 py-0.5 dark:border-cloud-medium/40"
              >esc</kbd
            > close
          </span>
        </div>
        <div class="flex items-center gap-3 text-cloud-medium dark:text-cloud-medium">
          <button
            id="shortcuts-help-btn"
            type="button"
            class="flex h-6 w-6 items-center justify-center rounded border border-cloud-medium/30 transition-colors hover:bg-cloud-dark/5 dark:border-cloud-medium/40 dark:hover:bg-ivory-dark/5"
            title="Keyboard shortcuts help"
          >
            ?
          </button>
          <div class="hidden sm:block">
            <kbd
              class="rounded border border-cloud-medium/30 px-1.5 py-0.5 dark:border-cloud-medium/40"
              >⌘K</kbd
            > or <kbd
              class="rounded border border-cloud-medium/30 px-1.5 py-0.5 dark:border-cloud-medium/40"
              >Ctrl+K</kbd
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</dialog>

<!-- Chord Toast Feedback -->
<div
  id="chord-toast"
  class="pointer-events-none fixed bottom-4 right-4 z-50 hidden translate-y-2 rounded-lg border border-cloud-medium/30 bg-ivory-light px-3 py-2 text-sm opacity-0 shadow-lg transition-all duration-200 dark:border-cloud-medium/40 dark:bg-slate-medium"
>
  <span class="font-medium">g</span> + <span
    class="text-cloud-medium dark:text-cloud-medium">p/w/b/h</span
  >
</div>

<!-- Shortcuts Help Modal -->
<dialog
  id="shortcuts-help-modal"
  class="fixed inset-0 z-[70] m-0 h-full w-full max-w-none bg-transparent p-0 backdrop:bg-black/50 backdrop:backdrop-blur-sm"
>
  <div class="flex h-full items-start justify-center px-4 pt-[15vh]">
    <div
      class="w-full max-w-xl overflow-hidden rounded-lg border border-cloud-medium/30 bg-ivory-light shadow-2xl dark:border-cloud-medium/40 dark:bg-slate-medium"
    >
      <!-- Header -->
      <div
        class="flex items-center justify-between border-b border-cloud-medium/30 px-6 py-4 dark:border-cloud-medium/40"
      >
        <h2 class="text-lg font-semibold">Keyboard Shortcuts</h2>
        <button
          id="close-shortcuts-help"
          type="button"
          class="flex h-6 w-6 items-center justify-center rounded text-cloud-medium transition-colors hover:bg-cloud-dark/5 hover:text-slate-dark dark:text-cloud-medium dark:hover:bg-ivory-dark/5 dark:hover:text-ivory-light"
          title="Close"
        >
          ✕
        </button>
      </div>

      <!-- Content -->
      <div class="max-h-[60vh] overflow-y-auto p-6">
        <!-- Global Shortcuts -->
        <section class="mb-6">
          <h3 class="mb-3 text-sm font-semibold uppercase tracking-wide text-cloud-dark dark:text-cloud-light">
            Global Shortcuts
          </h3>
          <div class="space-y-2">
            <div class="flex items-center justify-between">
              <span class="text-sm">Open command palette</span>
              <div class="flex gap-1">
                <kbd
                  class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                  >⌘K</kbd
                > or <kbd
                  class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                  >Ctrl+K</kbd
                >
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm">Go to Projects</span>
              <div class="flex gap-1">
                <kbd
                  class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                  >g</kbd
                > then <kbd
                  class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                  >p</kbd
                >
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm">Go to Work</span>
              <div class="flex gap-1">
                <kbd
                  class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                  >g</kbd
                > then <kbd
                  class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                  >w</kbd
                >
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm">Go to Blog</span>
              <div class="flex gap-1">
                <kbd
                  class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                  >g</kbd
                > then <kbd
                  class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                  >b</kbd
                >
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm">Go to Home</span>
              <div class="flex gap-1">
                <kbd
                  class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                  >g</kbd
                > then <kbd
                  class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                  >h</kbd
                >
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm">Show keyboard shortcuts</span>
              <kbd
                class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                >?</kbd
              >
            </div>
          </div>
        </section>

        <!-- Navigation Shortcuts -->
        <section class="mb-6">
          <h3 class="mb-3 text-sm font-semibold uppercase tracking-wide text-cloud-dark dark:text-cloud-light">
            Navigation Shortcuts
          </h3>
          <div class="space-y-2">
            <div class="flex items-center justify-between">
              <span class="text-sm">Scroll down</span>
              <kbd
                class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                >j</kbd
              >
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm">Scroll up</span>
              <kbd
                class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                >k</kbd
              >
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm">Go back</span>
              <kbd
                class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                >[</kbd
              >
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm">Go forward</span>
              <kbd
                class="rounded border border-cloud-medium/30 px-1.5 py-0.5 text-xs dark:border-cloud-medium/40"
                >]</kbd
              >
