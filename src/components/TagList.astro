---
import { slugifyTag } from "@lib/utils";

type Props = {
  tags: string[];
  class?: string;
  clickable?: boolean;
};

const { tags, class: className, clickable = true } = Astro.props;
---

{
  tags && tags.length > 0 && (
    <div class={`flex flex-wrap items-center gap-x-2 gap-y-1 ${className || ""}`}>
      {tags.map((tag, i) => (
        <>
          {clickable ? (
            <a
              href={`/tags/${slugifyTag(tag)}`}
              class="tag-link text-xs text-cloud-dark dark:text-cloud-light hover:text-slate-dark dark:hover:text-ivory-light transition-colors duration-150"
            >
              <span class="text-cloud-medium dark:text-cloud-medium select-none">#</span>{tag}
            </a>
          ) : (
            <span class="text-xs text-cloud-dark dark:text-cloud-light">
              <span class="text-cloud-medium dark:text-cloud-medium select-none">#</span>{tag}
            </span>
          )}
          {i < tags.length - 1 && (
            <span class="text-cloud-medium/50 dark:text-cloud-medium/50 select-none text-xs">/</span>
          )}
        </>
      ))}
    </div>
  )
}
