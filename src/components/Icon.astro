---
import type { IconName } from "@lib/icons";
import { iconPaths } from "@lib/icons";

interface Props {
  name: IconName;
  class?: string;
  id?: string;
  size?: number;
}

const { name, class: className, id, size = 24 } = Astro.props;
const paths = iconPaths[name];
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="1.5"
  stroke-linecap="round"
  stroke-linejoin="round"
  id={id}
  class={className}
  set:html={paths}
/>
