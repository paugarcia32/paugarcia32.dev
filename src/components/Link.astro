---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  class?: string;
};

const {
  href,
  external,
  underline = true,
  class: className,
  ...rest
} = Astro.props;
---

<a
  href={href}
  target={ external ? "_blank" : "_self" }
  class={cn("inline-block decoration-primary/30 dark:decoration-accent/40 hover:decoration-primary/50 hover:dark:decoration-accent/60 text-current hover:text-primary hover:dark:text-accent transition-colors duration-300 ease-in-out", underline && "underline underline-offset-2", className)}
  {...rest}>
  <slot/>
</a>
