---
interface Props {
  username: string;
}

const { username } = Astro.props;

// Use crypto.randomUUID for a unique instance ID per render
const instanceId = `github-card-${Math.random().toString(36).slice(2, 8)}`;
---

<span class="github-card-trigger inline" data-instance={instanceId} data-username={username}>
  <slot />
</span>

<template id={`${instanceId}-template`}>
  <div
    role="tooltip"
    class="github-card pointer-events-none fixed z-50 w-72 rounded-lg border border-cloud-medium/30 dark:border-cloud-medium/40 bg-ivory-light dark:bg-slate-medium shadow-lg opacity-0 translate-y-1"
    data-instance={instanceId}
    style="top: -9999px; left: -9999px; transition: opacity 200ms ease-out, transform 200ms ease-out;"
  >
    <div class="github-card-skeleton p-4 flex flex-col gap-3">
      <div class="size-12 rounded-full bg-cloud-medium/20 animate-pulse"></div>
      <div class="flex flex-col gap-1.5">
        <div class="h-3 w-24 rounded bg-cloud-medium/20 animate-pulse"></div>
        <div class="h-3 w-16 rounded bg-cloud-medium/20 animate-pulse"></div>
      </div>
      <div class="h-3 w-full rounded bg-cloud-medium/20 animate-pulse"></div>
      <div class="flex gap-4">
        <div class="h-3 w-20 rounded bg-cloud-medium/20 animate-pulse"></div>
        <div class="h-3 w-20 rounded bg-cloud-medium/20 animate-pulse"></div>
      </div>
    </div>
    <div class="github-card-content hidden p-4"></div>
  </div>
</template>

<script>
  const CACHE_TTL = 60 * 60 * 1000;

  interface GitHubProfile {
    avatar_url: string;
    name: string;
    login: string;
    bio: string;
    followers: number;
    following: number;
  }

  interface CacheEntry {
    data: GitHubProfile;
    timestamp: number;
  }

  function getCached(username: string): GitHubProfile | null {
    try {
      const raw = localStorage.getItem(`github_profile_${username}`);
      if (!raw) return null;
      const entry: CacheEntry = JSON.parse(raw);
      if (Date.now() - entry.timestamp > CACHE_TTL) {
        localStorage.removeItem(`github_profile_${username}`);
        return null;
      }
      return entry.data;
    } catch {
      return null;
    }
  }

  function setCache(username: string, data: GitHubProfile) {
    try {
      const entry: CacheEntry = { data, timestamp: Date.now() };
      localStorage.setItem(`github_profile_${username}`, JSON.stringify(entry));
    } catch {}
  }

  function renderContent(card: HTMLElement, profile: GitHubProfile) {
    const content = card.querySelector<HTMLElement>(".github-card-content");
    const skeleton = card.querySelector<HTMLElement>(".github-card-skeleton");
    if (!content || !skeleton) return;

    content.innerHTML = `
      <div class="flex flex-col gap-3">
        <img
          src="${profile.avatar_url}"
          alt="${profile.login}'s GitHub avatar"
          width="48"
          height="48"
          class="rounded-full size-12 ring-1 ring-cloud-medium/30 dark:ring-cloud-medium/40"
        />
        <div class="flex items-baseline gap-1.5 min-w-0">
          <span class="font-semibold text-sm text-slate-dark dark:text-ivory-light truncate">${profile.name || profile.login}</span>
          <span class="text-xs text-cloud-dark dark:text-cloud-light font-normal shrink-0">@${profile.login}</span>
        </div>
        ${profile.bio ? `<p class="text-xs text-slate-dark/75 dark:text-ivory-light/75 leading-relaxed line-clamp-2 !m-0 !p-0 font-sans">${profile.bio}</p>` : ""}
        <div class="flex gap-4 text-xs">
          <span>
            <span class="font-semibold text-slate-dark dark:text-ivory-light">${profile.followers.toLocaleString()}</span>
            <span class="text-cloud-dark dark:text-cloud-light ml-1">Following</span>
          </span>
          <span>
            <span class="font-semibold text-slate-dark dark:text-ivory-light">${profile.following.toLocaleString()}</span>
            <span class="text-cloud-dark dark:text-cloud-light ml-1">Followers</span>
          </span>
        </div>
      </div>
    `;

    skeleton.style.display = "none";
    content.classList.remove("hidden");
  }

  async function fetchProfile(username: string, card: HTMLElement): Promise<void> {
    const cached = getCached(username);
    if (cached) {
      renderContent(card, cached);
      return;
    }

    try {
      const res = await fetch(`https://api.github.com/users/${username}`);
      if (!res.ok) return;
      const data = await res.json();
      const profile: GitHubProfile = {
        avatar_url: data.avatar_url ?? "",
        name: data.name ?? "",
        login: data.login ?? username,
        bio: data.bio ?? "",
        followers: data.followers ?? 0,
        following: data.following ?? 0,
      };
      setCache(username, profile);
      renderContent(card, profile);
    } catch {}
  }

  function positionCard(trigger: Element, card: HTMLElement) {
    const rect = trigger.getBoundingClientRect();
    const cardHeight = card.offsetHeight || 160;
    const spaceAbove = rect.top;

    if (spaceAbove < cardHeight + 16) {
      card.style.top = `${rect.bottom + 8}px`;
    } else {
      card.style.top = `${rect.top - cardHeight - 8}px`;
    }

    const left = Math.min(rect.left, window.innerWidth - 288 - 16);
    card.style.left = `${left}px`;
  }

  function initGitHubCards() {
    const triggers = document.querySelectorAll<HTMLElement>(".github-card-trigger[data-instance]");

    triggers.forEach((trigger) => {
      const instanceId = trigger.dataset.instance;
      const username = trigger.dataset.username;
      if (!instanceId || !username) return;

      const template = document.getElementById(`${instanceId}-template`) as HTMLTemplateElement | null;
      if (!template) return;

      // Remove existing card for this instance (view transitions cleanup)
      document.querySelector(`.github-card[data-instance="${instanceId}"]`)?.remove();

      // Clone template and append to body â€” escapes all transform/overflow contexts
      const fragment = template.content.cloneNode(true) as DocumentFragment;
      document.body.appendChild(fragment);
      const cardEl = document.querySelector<HTMLElement>(`.github-card[data-instance="${instanceId}"]`);
      if (!cardEl) return;

      let hideTimeout: ReturnType<typeof setTimeout>;
      let fetched = false;

      function show() {
        clearTimeout(hideTimeout);
        if (!fetched) {
          fetched = true;
          fetchProfile(username!, cardEl!);
        }

        // Position first (while still invisible at -9999px) so transition starts from correct place
        positionCard(trigger, cardEl!);

        // Force a reflow so the browser registers the new position before animating
        cardEl!.getBoundingClientRect();

        cardEl!.classList.remove("opacity-0", "translate-y-1", "pointer-events-none");
        cardEl!.classList.add("opacity-100", "translate-y-0", "pointer-events-auto");
      }

      function hide() {
        hideTimeout = setTimeout(() => {
          cardEl!.classList.remove("opacity-100", "translate-y-0", "pointer-events-auto");
          cardEl!.classList.add("opacity-0", "translate-y-1", "pointer-events-none");
        }, 100);
      }

      trigger.addEventListener("mouseenter", show);
      trigger.addEventListener("mouseleave", hide);
      cardEl.addEventListener("mouseenter", () => clearTimeout(hideTimeout));
      cardEl.addEventListener("mouseleave", hide);
    });
  }

  (window as any).__initGitHubCards = initGitHubCards;
  document.addEventListener("DOMContentLoaded", initGitHubCards);
</script>
